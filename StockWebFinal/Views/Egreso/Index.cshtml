@model List<StockWebFinal.Models.Egreso>

@{
    ViewData["Title"] = "Listado de Egresos";
}

<p>
    <a asp-action="Crear" class="btn btn-primary">Nuevo Egreso</a>
</p>


<div class="container-lg col-4">
    <h1>Listado de egrsos</h1>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead class="table-dark">
                <tr>
                    <th>Fecha</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="table-secondary">
                @foreach (var egreso in Model)
                {
                    <tr>
                        <td>@egreso.Fecha</td>
                        <td>@egreso.Producto_Id</td>
                        <td>@egreso.Cantidad</td>
                        <td>
                            <a asp-action="Detalles" asp-route-id="@egreso.Id" class="btn btn-info">Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>
