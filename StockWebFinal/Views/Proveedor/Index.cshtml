@model List<StockWebFinal.Models.Proveedor>

@{
    ViewData["Title"] = "Listado de proveedores";
}

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Proveedor</a>
</p>

<div>
    <h1>Listado de proveedores</h1>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead class="table-dark">
                <tr>
                    <th>Denominacion</th>
                    <th>Codigo Tributario</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>FechaAlta</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="table-secondary">
                @foreach (var proveedor in Model)
                {
                    <tr>
                        <td>@proveedor.Denominacion</td>
                        <td>@proveedor.CuilCuit</td>
                        <td>@proveedor.Telefono</td>
                        <td>@proveedor.Correo</td>
                        <td>@proveedor.FechaAlta</td>
                        <td>@proveedor.Estado</td>


                        <td>
                            <a asp-action="Detalles" asp-route-id="@proveedor.Id" class="btn btn-info">Detalles</a>
                            <a asp-action="Editar" asp-route-id="@proveedor.Id" class="btn btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>
