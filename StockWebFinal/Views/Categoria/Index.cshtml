@model List<StockWebFinal.Models.Categoria>

@{
    ViewData["Title"] = "Listado de categorías";
}

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Categoría</a>
</p>


<div class="container-lg col-4">
    <h1>Listado de categorías</h1>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Fecha Alta</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="table-secondary">
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.FechaAlta</td>
                        <td>@categoria.Estado</td>
                        <td>
                            <a asp-action="Detalles" asp-route-id="@categoria.Id" class="btn btn-info">Detalles</a>
                            <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>
