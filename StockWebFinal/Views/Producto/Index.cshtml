@model List<StockWebFinal.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Producto</a>
    <a asp-action="BajoStock" class="btn btn-danger">Ver stock bajo</a>
</p>

<div class="container-lg col-4">
    <h1>Listado de productos</h1>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead class="table-dark">
                <tr>
                    <th>Categoría</th>
                    <th>Marca</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Stock</th>
                    <th>Fecha Alta</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="table-secondary">
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Categoria_Id</td>
                        <td>@producto.Marca_Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Stock</td>
                        <td>@producto.FechaAlta</td>
                        <td>@producto.Estado</td>
                        <td>
                            <a asp-action="Detalles" asp-route-id="@producto.Id" class="btn btn-info">Detalles</a>
                            <a asp-action="Editar" asp-route-id="@producto.Id" class="btn btn-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros</p>
    }
</div>
