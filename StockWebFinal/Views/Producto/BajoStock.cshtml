@model List<StockWebFinal.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container-lg col-4">
    <h1>Listado de productos a reponer</h1>
    @if (Model.Count == 0)
    {
        <p>No hay productos bajo stock.</p>
    }else
    {
        <table class="table table-bordered" id="" width="100%" cellspacing="0">
            <thead class="table-dark">
                <tr>
                    <th>Categoría</th>
                    <th>Marca</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Stock</th>
                    <th>Stock Minimo</th>
                    <th>Fecha Alta</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody class="table-secondary">
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Categoria_Id</td>
                        <td>@producto.Marca_Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Stock</td>
                        <td>@producto.StockMinimo</td>
                        <td>@producto.FechaAlta</td>
                        <td>@producto.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver al listado</a>
</div>