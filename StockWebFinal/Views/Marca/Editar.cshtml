@model StockWebFinal.Models.Marca

@{
    ViewData["Title"] = "Modificar Marca";
}

<h1>Modificar Marca</h1>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="input-group mb-3">
        <label asp-for="FechaAlta" class="input-group-text">Fecha de alta</label>
        <input asp-for="FechaAlta" type="datetime" class="form-control" id="fechaAlta" value="@DateTime.Now" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Estado">Estado: </label>
        <select asp-for="Estado" id="Estado" name="Estado" class="form-control">
            <option value="True">Activo</option>
            <option value="False">Inactivo</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>